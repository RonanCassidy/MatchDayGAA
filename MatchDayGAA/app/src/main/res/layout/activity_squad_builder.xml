<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SquadBuilder"
    android:clickable="false">

    <ListView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/listview"
        android:choiceMode="singleChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listview"
        android:id="@+id/team_layout"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Goalkeeper"
            android:id="@+id/goalkeeper"
            android:gravity="center"
            android:maxWidth = "80sp"
            android:textStyle="bold"
            android:layout_below="@+id/no1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/rcb"
            android:maxWidth = "80sp"
            android:gravity="center"
            android:layout_marginTop="39dp"
            android:textStyle="bold"
            android:layout_below="@+id/goalkeeper"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxWidth = "80sp"
            android:id="@+id/lcb"
            android:gravity="center"
            android:layout_alignTop="@+id/rcb"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/fullback"
            android:maxWidth = "80sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/no3"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxWidth = "80sp"
            android:id="@+id/rhb"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/rcb"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxWidth = "80sp"
            android:id="@+id/lhb"
            android:gravity="center"
            android:layout_alignTop="@+id/center_back"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxWidth = "80sp"
            android:id="@+id/center_back"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_alignTop="@+id/rhb"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/midfield1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/center_back"
            android:layout_alignLeft="@+id/no8"
            android:layout_alignStart="@+id/no8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/midfield2"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_alignTop="@+id/midfield1"
            android:layout_toRightOf="@+id/goalkeeper"
