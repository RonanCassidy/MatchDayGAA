            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="13."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no13"
            android:textStyle="bold|italic"
            android:layout_above="@+id/rff"
            android:layout_alignLeft="@+id/no10"
            android:layout_alignStart="@+id/no10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="14."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no14"
            android:textStyle="bold|italic"
            android:layout_above="@+id/lff"
            android:layout_alignLeft="@+id/no11"
            android:layout_alignStart="@+id/no11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no15"
            android:textStyle="bold|italic"
            android:layout_above="@+id/lff"
            android:layout_alignLeft="@+id/no12"
            android:layout_alignStart="@+id/no12" />

    </RelativeLayout>

</RelativeLayout>
