            android:layout_toEndOf="@+id/no9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no5"
            android:textStyle="bold|italic"
            android:layout_above="@+id/center_back"
            android:layout_alignRight="@+id/no10"
            android:layout_alignEnd="@+id/no10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="6."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no6"
            android:textStyle="bold|italic"
            android:layout_above="@+id/center_back"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="7."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no7"
            android:textStyle="bold|italic"
            android:layout_above="@+id/lhb"
            android:layout_toEndOf="@+id/no9"
            android:layout_alignLeft="@+id/no4"
            android:layout_alignStart="@+id/no4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="8."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no8"
            android:textStyle="bold|italic"
            android:layout_alignBaseline="@+id/no9"
            android:layout_alignBottom="@+id/no9"
            android:layout_toLeftOf="@+id/goalkeeper"
            android:layout_toStartOf="@+id/goalkeeper"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="9."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no9"
            android:textStyle="bold|italic"
            android:layout_above="@+id/midfield2"
            android:layout_alignLeft="@+id/midfield2"
            android:layout_alignStart="@+id/midfield2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no10"
            android:textStyle="bold|italic"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_above="@+id/rhf"
            android:layout_toRightOf="@+id/rhf"
            android:layout_toEndOf="@+id/rhf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="11."
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/no11"
            android:textStyle="bold|italic"
            android:layout_above="@+id/lhf"
